@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Index Category</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Günün İndirimleri Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Günün indirimli ürünleri aşağıda yer almaktadır. Tema bütünlüğü için 2 adet inidirimli ürün seçiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İndirim Başlığı</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">İndirim Durumu</th>

									<th scope="col">İndirim Açıklaması</th>
									<th scope="col">Resim Url'i'</th>

									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountID</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-warning">Durum</a></td>

										<td>@item.Description</td>
										<td>@item.ImageUrl</td>

										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btnbtn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni İndirim Ekle </a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
