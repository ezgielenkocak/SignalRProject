@model SignalRWebUi.Dtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateCategory</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Kategori Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<input type="hidden" asp-for="CategoryID"/>
								<label for="categoryName">Kategori Adı</label>
								<input type="text" class="form-control" asp-for="CategoryName" id="categoryName">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Kategori Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>