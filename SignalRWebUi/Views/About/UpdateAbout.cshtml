@model UpdateAboutDto
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateCategory</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="AboutID"/>
						<div class="card-body">
							<div class="form-group">
								<input type="hidden" asp-for="AboutID" />
								<label for="title">Başlık</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Görsel Url'ini Giriniz'</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Yazısını Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>